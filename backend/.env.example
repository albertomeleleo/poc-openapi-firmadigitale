# Environment Configuration
# Development Mode - Mock Implementation

# Application Environment
# Options: dev, prod
# Additional profiles: mock (for testing without real API)
SPRING_PROFILES_ACTIVE=dev,mock

# Server Configuration
SERVER_PORT=8080

# Database Configuration (H2 in-memory)
SPRING_DATASOURCE_URL=jdbc:h2:mem:firmadb
SPRING_DATASOURCE_USERNAME=sa
SPRING_DATASOURCE_PASSWORD=

# OpenAPI Firma Credentials (Optional - only needed without mock profile)
# Get your API Key from: https://console.openapi.com
OPENAPI_API_KEY=your_api_key_here
OPENAPI_ENVIRONMENT=sandbox

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,PATCH,OPTIONS
CORS_ALLOWED_HEADERS=*
CORS_ALLOW_CREDENTIALS=true

# Logging
LOGGING_LEVEL_ROOT=INFO
LOGGING_LEVEL_COM_OPENAPI_FIRMA=DEBUG
